<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/stick_day"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2"
        android:background="@android:color/holo_purple">

        <TextView
            android:id="@+id/day_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="History Activity"
            android:textSize="@dimen/text_size_HA"
            android:layout_gravity="start"/>

        <ImageView
            android:id="@+id/logo_comment"
            android:layout_width="@dimen/size_ic_comment_width"
            android:layout_height="@dimen/size_ic_comment_height"
            android:src="@drawable/ic_comment_black_48px"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/blank_day"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/darker_gray"
        android:layout_weight="8"/>


</LinearLayout>